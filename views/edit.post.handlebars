<section>
<h2>Edit Post</h2>
<form class="edit-post-form">
    <div>
        <label for="post-title">Post Title</label>
        <input class="input" name="post-title" type="text" value="{{post.title}}">
    </div>
    <div>
        <label for="post-text">Post Content</label>
        <input class="input" name="post-text" type="text" value="{{post.post_text}}">
    </div>
     <div class="date-id">
       created on {{format_date post.created_at}} -
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="button" class="delete-button">Delete</button>
    <button type="button" class="save-button">Save</button>
</form>


</section>

<script src="/public/js/edit-and-delete-post.js"></script>
<script src="/public/js/comment.js"></script>
