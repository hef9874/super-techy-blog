{{!-- show all user posts  --}}

<section class="post-list">
    <h1>Your Dashboard</h1>
    <div class="header">
        <a href ="/dashboard/create/"><button id="create-post">Create New Post</button></a>
        {{#if posts.length}}
    </div>
    {{#each posts as |post|}}
    {{> post-info post}}

    <a href="/dashboard/edit/{{post.id}}"><button class="edit-post">Edit Post</button></a>
    </div>
    {{/each}}

    {{else}}
    <p class="no-posts">You have no Posts yet.</p>
</section>